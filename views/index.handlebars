<div class="container">
    <div class="row">
        <div class="col-12" id="top-bar">
            <img src="/assets/image/burger.png" alt="burger">
            <h1>Eat-Da-Burger!</h1>
        </div>

        <div class="col-6 text-left" id="burgers">
            <h2> Available Burgers</h2>
            <ul>
                {{#each burger_data}} {{#unless this.devoured}}
                <li>
                    <pre>{{this.id}}. {{this.burger_name}}</pre>

                    <div class="col-2 devour">
                        <form action="/burgers/create/{{this.id}}" method="POST">
                            <input type="hidden" class="burger_id" type="text" value="flase"><br>
                            <button class="btn btn-outline-danger" type="submit">Devour it!</button>
                        </form>
                    </div>


                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-3" id="devoured">
            <h2>Burgers That Are Devoured</h2>
            {{#each burger_data}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}">
            {{/if}} {{/each}}
        </div>

    </div>
    <div class="row">
        <div class="col-3 text-center">
            <h2>Add a Burger you want to eat </h2>

            <form class="update-form" action="/burgers/create" method="POST">
                <div class="form-group">
                    <label for="display">Burger Name</label>
                    <input type="text" id="display" name="burger_name">
                </div>
                <button class="btn btn-light" type="submit">Submit</button>
            </form>

        </div>
    </div>