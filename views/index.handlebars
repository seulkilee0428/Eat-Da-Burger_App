<div class="container">
    <div class="row">
        <div class="col-12" id="top-bar">
            <img src="/assets/image/burger.png" alt="burger">
            <h1>Eat-Da-Burger!</h1>
        </div>

        <div class="col-6" id="burgers">
            <h2> Available Burgers</h2>
            <ul>
                {{#each burger_data}} {{#unless this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button class="btn btn-light" type="submit">Devoured it!</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div id="devoured">
            <h2>Burgers That Are Devoured</h2>

            <ul>
                {{#each burger_data}} {{#if this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>

        <div id="adding">
            <h2>Add a Burger you want to eat </h2>

            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <label for="display">Burger Name</label>
                    <input type="text" id="display" name="burger_name">
                </div>
                <button class="btn btn-light" type="submit">Submit</button>
            </form>
        </div>